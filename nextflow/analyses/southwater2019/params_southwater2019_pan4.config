/* Other parameters may be similar across analyses, but can be varied */
/* camera parameters							*/
params.ALPHA = 65
params.FOCAL = 3.7	/* focal length of camera */
params.frame_width = 640
params.frame_height = 480
params.FPS = 30
params.baseline = 125
params.framesize = "640 480"

/*contour parameters */
params.black = 130		/* below this threshold a pixel is considered black */
params.minpulse = 0.1		/* must be above this threshold for size of a contour to be detected */
params.watchvideo = 0		/* watch video (1) or not (0) during analysis. */
params.delay = 0		/* if watching video, how much delay between frames */

/* Parameters for segmenting pulses across frames into single pulses */
params.XMAX = 10	/*must be within this value in x direction to be considered the same pulse */
params.YMAX = 10	/*must be within this value in y direction to be considered the same pulse */
params.HPD = 2		/* hot pixel distance - if within this distance, merge as hot pixel */
params.PDMIN = 4		/* minimum pulse duration (in frames) */
params.HPP = 10			/* hot pixel noise filtering parameter >2 don't filter. 0.15 filter more aggressively */ 


/* Parameters for pairing pulses across left and right cameras into stereo pulses */
params.PSD = 5
params.PFD = 10		/* Pulse-finish difference (max allowed diff in frame end to be considered stereo pair) */
params.SRMAX = 10
params.XD = 300

  /* Weights for distance matrix used in Hungarian algorithm to pair pulses for stereo */
params.SPW = 1
params.EDW = 1
params.YDW = 1

/* Parameters for visualizing contours */
params.mindis = 20		/* minimum disparity value to plot on 3d plot */


